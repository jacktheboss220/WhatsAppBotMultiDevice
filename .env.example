# WhatsApp Bot Configuration
# Copy this file to .env and fill in your actual values

# Bot Configuration
PREFIX=-
MY_NUMBER=your_whatsapp_numbers_without_plus
MODERATORS=number1,number2,number3

# Database
MONGODB_KEY=your_mongodb_connection_string

# Server Configuration
PORT=8000
NODE_ENV=development

# Google APIs
GOOGLE_API_KEY=your_google_api_key
SEARCH_ENGINE_KEY=your_google_search_engine_key

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Third Party APIs
GENIUS_ACCESS_SECRET=your_genius_api_secret
PIN_KEY=your_pinterest_api_key
REMOVE_BG_KEY=your_remove_bg_api_key
TRUECALLER_ID=your_truecaller_id
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Heroku (if deploying to Heroku)
HEROKU_API_TOKEN=your_heroku_api_token
HEROKU_APP_NAME=your_heroku_app_name

# YouTube Download Configuration (Optional)
YOUTUBE_DELAY_BETWEEN_REQUESTS=1000
YOUTUBE_MAX_RETRIES=3
YOUTUBE_RETRY_DELAY=2000
MAX_AUDIO_SIZE_MB=50
MAX_VIDEO_SIZE_MB=50
DOWNLOAD_TIMEOUT_SECONDS=600
YOUTUBE_DEBUG=false
ENABLE_USER_AGENT_ROTATION=true
FORCE_DISABLE_YTDLP=false
